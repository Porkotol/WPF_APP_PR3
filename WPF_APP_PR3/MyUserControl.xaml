<UserControl x:Class="WPF_APP_PR3.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_APP_PR3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <TextBox x:Name="txtMessage" 
             FontSize="14"  FontFamily="Segoe UI"  HorizontalAlignment="Center"
             VerticalAlignment="Top" Margin="0,20,0,0"
             Width="300" Height="30" TextAlignment="Center"
             BorderBrush="Blue" BorderThickness="2"/>

        <Button x:Name="btnAction" Content="Натисни на мене!"
            Width="120"  Height="35"  HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Margin="0,0,0,30"  Background="Red" Foreground="White"
            FontWeight="Bold"  Click="btnAction_Click"/>
    </Grid>
</UserControl>
